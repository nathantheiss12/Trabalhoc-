
@{
    ViewBag.Title = "Index";
}

<title> Lista Usuarios </title>
<h3 class="text-center mb-3 mt-3 text-info">Lista de Usuários</h3>

<div class="row">
    <div class="col-12">
        <a href="/usuario/cadastro" class="btn btn-primary float-right mb-3">
            <i class="fas fa-plus"></i> Novo Usuário
        </a>
    </div>
</div>

<table class="table table-striped table-hover table-bordered">
    <thead>
        <tr>
            <th>Código</th>
            <th>Nome</th>
            <th>Login</th>
            <th>Senha</th>
            <th>Ação</th>
        </tr>
    </thead>
    <tfoot>
        <tr>
            <th>Código</th>
            <th>Nome</th>
            <th>Login</th>
            <th>Senha</th>
            <th>Ação</th>
        </tr>
    </tfoot>
    <tbody>
        @foreach(Model.Usuario usuario in ViewBag.Usuarios)
        {
            <tr>
                <td>@usuario.Id</td>
                <td>@usuario.Nome</td>
                <td>@usuario.Login</td>
                <td>@usuario.Senha</td>
                <td>
                    <a href="/usuario/editar?id=@usuario.Id" class="btn btn-primary">
                        <i class="fas fa-pen"></i> Editar
                    </a>                    
                    <a href="/usuario/apagar?id=@usuario.Id" class="btn btn-danger">
                        <i class="fas fa-trash"></i> Apagar
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>