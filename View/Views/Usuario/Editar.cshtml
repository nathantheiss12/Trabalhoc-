
@{
    ViewBag.Title = "Editar";
}

<title>Editar Usuario</title>
<h3 class="text-center mb-3 mt-3 text-info">Editar Usuario</h3>

<form action="/usuario/update" method="post">
    <input type="hidden" name="id" value="@ViewBag.usuario.Id" />

    <div class="row">
        <div class="col-12">
            <div class="form-group">
                <label for="campo-nome">Nome</label>
                <input type="text" name="nome" id="campo-nome" class="form-control" value="@ViewBag.usuario.Nome" />
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-12">
            <div class="form-group">
                <label for="campo-login">Login</label>
                <input type="text" name="login" id="campo-login" class="form-control" value="@ViewBag.usuario.Login" />
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-12">
            <div class="form-group">
                <label for="campo-senha">Senha</label>
                <input type="password" name="senha" id="campo-senha" class="form-control" value="@ViewBag.usuario.Senha" />
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-12">
            <button type="submit" class="btn btn-success float-right"><i class="fas fa-save"></i> Salvar</button>
        </div>
    </div>
</form>