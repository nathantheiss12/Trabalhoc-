
@{
    ViewBag.Title = "Editar";
}

<title>  Editar Categoria </title>
<h3 class="text-center mb-3 mt-3 text-info">Editar Categoria</h3>

<form method="post" action="/categoria/update">
    <input type="hidden" name="id" value="@ViewBag.Categoria.Id" />

    <div class="row">
        <div class="col-12">
            <div class="form-group">
                <label for="campo-nome">Nome</label>
                <input type="text" name="nome" id="campo-nome" class="form-control" value="@ViewBag.Categoria.Nome" />
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-12">
            <button type="submit" class="btn btn-success float-right"><i class="fas fa-save"></i> Salvar</button>
        </div>
    </div>
</form>