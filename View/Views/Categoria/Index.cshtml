
@{
    ViewBag.Title = "Index";
}

<title> Lista Categorias </title>
<h3 class="text-center mb-3 mt-3 text-info">Lista de Categorias</h3>

<div class="row">
    <div class="col-12">
        <a href="/categoria/cadastro" class="btn btn-primary float-right mb-3">
            <i class="fas fa-plus"> Nova Categoria</i>
        </a>
    </div>
</div>

<table class="table table-striped table-hover table-bordered">
    <thead>
        <tr>
            <th>Código</th>
            <th>Nome</th>
            <th>Ação</th>
        </tr>
    </thead>
    <tfoot>
        <tr>
            <th>Código</th>
            <th>Nome</th>
            <th>Ação</th>
        </tr>
    </tfoot>
    <tbody>
        @foreach(Model.Categoria categoria in ViewBag.Categorias)
        {
            <tr>
                <td>@categoria.Id</td>
                <td>@categoria.Nome</td>
                <td>
                    <a href="/categoria/editar?id=@categoria.Id" class="btn btn-primary"><i class="fas fa-pen"></i> Editar</a>
                    <a href="/categoria/apagar?id=@categoria.Id" class="btn btn-danger"><i class="fas fa-trash"></i>Apagar</a>
                </td>
            </tr>
        }
    </tbody>
</table>